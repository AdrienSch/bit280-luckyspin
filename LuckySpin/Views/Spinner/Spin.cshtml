@model LuckySpin.Models.Spin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject LuckySpin.Models.TextTransformService Transform
@inject LuckySpin.Models.Repository repo
@{
    Layout = "_Layout";
    int[] number = Model.Number;
    repo.AddSpin(Model);

}
<button onclick='history.go(0)'>Spin</button>
<div>@number[0]</div><div>@number[1]</div><div>@number[2]</div>
<h1> Lucky @Transform.numberToText(Model.Player.Luck) </h1>
<h2 style="@Model.Display">@Model.Player.FirstName, You Win!</h2>
<img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" style="@Model.Display" />
<!-- Add a link to Review the Spins -->
<a asp-controller="Spinner"
   asp-action="LuckList">see your Luck List"</a>